
<div class="text-center big-div">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|%>
      
      <div class="form-signin">
        <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
          <div >
            <%= f.label :email, class: "sr-only" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control mail"%>
          </div> 

          <div >
            <%= f.label :password, class: "sr-only" %>
            <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "form-control pass" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="form-check check">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, class: "rem " %>
            </div>
          <% end %>

          <div class="checkbox mb-3">
            <%= f.submit "Sign in", class: "btn btn-lg btn-primary btn-block"%>
          </div>
          <p class="mt-5 mb-3 text-muted">&copy; Bright, Kelvin</p>
        </div>
    <% end %>
</div>



