
<div class="text-center ">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|%>
      
      <div class="form-signin">
        <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
          <div mail >
            <%= f.label :mail1, class: "sr-only" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control mail",  id: "mail2"%>
          </div> 

          <div pass>
            <%= f.label :pass1, class: "sr-only" %>
            <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "form-control pass", id: "pass2"  %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="form-check check">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, class: "rem " %>
            </div>
          <% end %>

          <div class="checkbox mb-3">
            <%= f.submit "Sign in", class: "btn btn-lg btn-primary btn-block"%>
          </div>
          <p class="text-center"> OR </p>
          <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-primary btn-block signup_button"%>
          <p class="mt-5 mb-3 text-muted">&copy; Bright, Kelvin</p>
        </div>
    <% end %>
</div>



