<div class="container">
  <div class="row">
    <div class="col-md-3"> 
        <%= render 'partials/user_profile_side', user: @user %>
    </div>

    <div class="col-md-6">

        <h3>Friend Request Received</h3>
        <table class="table">
          <thead>
            <tr> 
              <th scope="col">User</th>
              <th scope="col">Action</th>
            </tr>
          </thead>
          <% @user.friend_requests.each do |f| %>
            <tbody>
              <tr>
                <td> <%= render f %></td>
                <td> <%= link_to "Confirm Request", confirm_friend_path(f),
                                                method: :patch,
                                                data: { confirm: "Are You sure?" },
                                                class: "btn btn-success mt-4"%> 
                                                 <%= link_to "Ignore", ignore_request_path(f),
                                                method: :delete,
                                                data: { confirm: "Are You sure?" },
                                                class: "btn btn-danger mt-4"%></td>
              </tr>
            </tbody>
          <% end %>
        </table>

        <hr>
        <h3>Friend Request Sent</h3>
        <table class="table">
          <thead>
            <tr> 
              <th scope="col">User</th>
              <th scope="col">Action</th>
            </tr>
          </thead>
          <% @user.pending_friends.each do |f| %>
            <tbody>
              <tr>
                <td> <%= render f %></td>
                <td> <%= link_to "Cancel Request", cancel_request_path(f),
                                                method: :delete,
                                                data: { confirm: "Are You sure?" },
                                                class: "btn btn-danger mt-4"%> </td>
              </tr>
            </tbody>
         <% end %>
        </table>
    </div>

    <div class="col-md-3">
      <h3> Friends </h3>
        <%= render @user.friends %>
      
    </div>

  </div>
</div>