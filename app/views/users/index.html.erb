<ul>
  <% @users.each do |user| %>
    <li class= "list-unstyled user_idex1">  
      <%= image_tag user.gravatar_url, class: "rounded-circle mx-auto" %>
      <h4 class="pt-1"><%= link_to user.name.upcase%></h4> <%= user.email %> 
      <p>Join <%= time_ago_in_words(user.created_at) %> ago.</p> 

       <% if current_user.friend?(user) %>
          <%= link_to "Remove Friend", delete_friend_path(user), 
                                        method: :delete,
                                        data: { confirm: "Are You sure?" },
                                        class: "btn btn-danger" %> 
          
      <% elsif current_user.pending_friends.include?(user) %>
        <%= link_to "Request already sent", "#", class: "btn btn-success"%>
      <% else %>
          <%= form_for(@friendship, url: friendships_path(@friendship)) do |f| %>
            <%= f.hidden_field :friend_id, value: user.id  %>
            <%= f.submit "Add As Friend", class: "btn btn-primary" %>
          <% end %>
      <% end %>
      
     </li>
  <% end %>
</ul>