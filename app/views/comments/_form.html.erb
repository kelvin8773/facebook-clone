<%= form_for(@comment, url: comments_create_path ) do |f| %>
  <div class="field">     
    <%= f.text_area :content, class: "post_box", id: "content"%>
  </div>

	<div class="actions">
    <%= f.hidden_field :post_id, value: post.id %>

    <%= f.submit "Comment", class: "btn btn-primary post_button"  %>
  </div>
<%end %>
